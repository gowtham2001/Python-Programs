def staircase(n):
    # Write your code here
    a='#'
    space=' '
    for i in range(1,n+1):
        spacecount=n-i
        for j in range(spacecount):
            print(space,end='')
        for k in range(i):
            print(a,end='')

        print()

        

if __name__ == '__main__':
    n = int(input().strip())

    staircase(n)
